{
    "id": "ics-calendar",
    "name": "ICS Calendar",
    "description": "Calendar events via ICS feed (works with Outlook, Google, Apple, etc.)",
    "script": "ics_calendar.py",
    "variables": [
        {
            "name": "feeds",
            "label": "Calendars",
            "type": "feeds",
            "default": "[]"
        },
        {
            "name": "events",
            "label": "Max Events",
            "type": "stepper",
            "min": 1,
            "max": 20,
            "default": "3"
        },
        {
            "name": "days",
            "label": "Days Ahead",
            "type": "stepper",
            "min": 1,
            "max": 30,
            "default": "1"
        },
        {
            "name": "detail",
            "label": "Detail",
            "type": "select",
            "options": "title,location,full",
            "default": "title"
        },
        {
            "name": "maxchars",
            "label": "Chars Per Line",
            "type": "stepper",
            "min": 5,
            "max": 50,
            "default": "20"
        },
        {
            "name": "dividers",
            "label": "Day dividers",
            "type": "checkbox",
            "default": "true"
        }
    ],
    "created_at": "2026-02-12T00:00:00+00:00",
    "updated_at": "2026-02-17T00:00:00+00:00"
}
